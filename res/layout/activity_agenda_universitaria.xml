<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >
          
<LinearLayout 
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
   <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/encabezado" >
   </LinearLayout>
	

   <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:background="@drawable/opcionesfondo" >
    	
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/agregarContacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/botonagregar" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/contactos" />

        <Button
            android:id="@+id/buscarContacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botonbuscar" />

   </LinearLayout>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/botonagregar" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/asignaturas" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botonbuscar" />

   </LinearLayout>
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            
            android:background="@drawable/botonagregar" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eventos" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botonbuscar" />

   	</LinearLayout>
   	
   </LinearLayout>
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/menu" >
       	
         <Button
             android:id="@+id/botonLlamar"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="45dp"
             android:layout_marginTop="10dp"
             android:background="@drawable/botonllamar" />
		
          <Button
              android:id="@+id/botonSMS"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="45dp"
              android:layout_marginTop="13dp"
              android:background="@drawable/botonsms" />
          
           <Button
               android:id="@+id/botonWeb"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="45dp"
               android:layout_marginTop="13dp"
               android:background="@drawable/botonweb" />
    </LinearLayout>
    
     
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@drawable/menu_principal"
         android:orientation="horizontal" >

         <LinearLayout
         	 android:id="@+id/opcion0"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="120dp"
             android:padding="20dp"
             android:background="@drawable/opcion0"
             android:orientation="horizontal">
         </LinearLayout>
        
 
         <LinearLayout
             android:id="@+id/opcion1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:padding="20dp"
             android:orientation="horizontal"
             android:visibility="gone" >

             <EditText
                 android:id="@+id/tel"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:hint="Número de teléfono"
                 android:inputType="phone" >
             </EditText>

             <Button
                 android:id="@+id/llamar"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/llamar" />

             <Button
                 android:id="@+id/marcar"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/marcar" />

         </LinearLayout>

          <LinearLayout
              android:id="@+id/opcion2"
              android:visibility="gone"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="20dp"
              android:weightSum="15" >

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="10"
                  android:orientation="vertical" >

                  <EditText
                      android:id="@+id/numeroSMS"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="Número de teléfono"
                      android:inputType="phone" >

                    
                  </EditText>

                  <EditText
                      android:id="@+id/mensajeSMS"
                      android:hint="Mensaje"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="textMultiLine" />

              </LinearLayout>

              <LinearLayout
                  android:layout_width="118dp"
                  android:layout_height="match_parent"
                  android:layout_weight="5"
                  android:padding="10dp" >

                  <Button
                      android:id="@+id/enviarSMS"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@drawable/botonenviar" />
                 
              </LinearLayout>
          </LinearLayout>
	

         <LinearLayout
             android:id="@+id/opcion3"
             android:visibility="gone"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="20dp" >
			
			<LinearLayout
			    android:layout_width="match_parent"
             	android:layout_height="wrap_content"
             	android:orientation="horizontal"
             	android:weightSum="15">
             	 
             <EditText
                 android:id="@+id/url"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="13"
                 android:gravity="center"
                 android:hint="URL Web" >

              

             </EditText>

             <Button
                 android:id="@+id/visitar"
                 android:layout_weight="2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/visitar" />
             </LinearLayout>
             
			<LinearLayout
			    android:layout_width="match_parent"
             	android:layout_height="wrap_content"
             	android:orientation="horizontal"
             	android:layout_marginTop="20dp"
             	android:weightSum="25">
				
             	<ImageView
             	    android:id="@+id/twitter"
             	    android:layout_width="wrap_content"
             	    android:layout_height="wrap_content"
             	    android:layout_weight="5"
             	    android:padding="5dp"
             	    android:background="@drawable/twitter" />
             	
             	<ImageView
             	    android:id="@+id/facebook"
             	    android:layout_width="wrap_content"
             	    android:layout_height="wrap_content"
             	    android:layout_weight="5"
             	    android:background="@drawable/facebook" />
             	
             	<ImageView
             	    android:id="@+id/gmail"
             	    android:layout_width="wrap_content"
             	    android:layout_height="wrap_content"
             	    android:layout_weight="5"
             	    android:background="@drawable/gmail" />
             	
             	<ImageView
             	    android:id="@+id/hotmail"
             	    android:layout_width="wrap_content"
             	    android:layout_height="wrap_content"
             	    android:layout_weight="5"
             	    android:background="@drawable/hotmail" />
             	
             	<ImageView
             	    android:id="@+id/itsa"
             	    android:layout_width="wrap_content"
             	    android:layout_height="wrap_content"
             	    android:layout_weight="5"
             	    android:background="@drawable/itsa" />
             	
             	
             	
             </LinearLayout>
         </LinearLayout>
		  
     </LinearLayout>

</LinearLayout>
</ScrollView>


